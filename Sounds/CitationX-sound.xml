<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<fx>

    <engine>
        <name>left engine int</name>
        <path>Aircraft/CitationX/Sounds/turbojet_fan_int.wav</path>
        <condition>
            <and>
                <property>sim/current-view/internal</property>
            </and>
        </condition>
        <mode>looped</mode>
        <pitch>
            <property>engines/engine[0]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x> 3.0  </x>
            <y> 1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

    <engine>
        <name>right engine int</name>
        <path>Aircraft/CitationX/Sounds/turbojet_fan_int.wav</path>
        <condition>
            <and>
                <property>sim/current-view/internal</property>
            </and>
        </condition>
        <mode>looped</mode>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x> 3.0 </x>
            <y>-1.7 </y>
            <z> 0.6 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>15.0</max-dist>
    </engine>

    <engine>
        <name>left n1</name>
        <path>Sounds/turbojet_fan.wav</path>
                <condition>
                    <greater-than>
                    <property>engines/engine[0]/fan</property>
                    <value>1</value>
                    </greater-than>
            <and>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
            </and>
                </condition>
            <mode>looped</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <pitch>
            <property>engines/engine/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>10</x>
            <y>1.3</y>
            <z>1</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

    <engine>
        <name>right n1</name>
        <path>Sounds/turbojet_fan.wav</path>
        <condition>
          <greater-than>
          <property>engines/engine[1]/fan</property>
          <value>1</value>
          </greater-than>
            <and>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
            </and>
          </condition>
          <mode>looped</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0</offset>
            <factor>0.01</factor>
        </pitch>
        <position>
            <x>10</x>
            <y>-1.3</y>
            <z>1</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </engine>

    <engine>
        <name>reverser</name>
        <path>Sounds/exhaust_loop.wav</path>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm</property>
                <value>0</value>
            </greater-than>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>surface-positions/reverser-norm</property>
            <factor>0.5</factor>
        </volume>
        <volume>
            <property>engines/engine/turbine</property>
            <factor>0.01</factor>
        </volume>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <pitch>
            <offset>1.6</offset>
        </pitch>
        <position>
            <x> 5.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </position>
        <reference-dist>100.0</reference-dist>
        <max-dist>1000.0</max-dist>
    </engine>

    <rumble>
        <name>rumble</name>
        <path>Sounds/rumble.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>velocities/groundspeed-kt</property>
            <factor>0.02</factor>
            <min>0</min>
            <max>0.5</max>
        </volume>
        <position>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z>-1.0 </z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>50.0</max-dist>
    </rumble>

    <gear>
        <name>gear</name>
        <path>Sounds/gear.wav</path>
        <property>gear/gear[0]/position-norm</property>
        <mode>in-transit</mode>
        <pitch>
            <internal>dt_play</internal>
            <offset>0.8</offset>
            <factor>-0.001</factor>
        </pitch>
        <position>
            <x>-7.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <gear>
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <condition>
            <or>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>0</value>
                </equals>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
        <mode>once</mode>
        <position>
            <x>-7.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>10.0</max-dist>
    </gear>

    <gear>
        <name>gear-horn</name>
        <type>avionics</type>
        <path>Sounds/gear-hrn.wav</path>
        <condition>
            <property>instrumentation/alerts/gear-horn</property>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>instrumentation/alerts/gear-horn</property>
            <factor>0.7</factor>
        </volume>
        <position>
            <x> 2.5 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </position>
    </gear>

    <squeal>
        <name>squeal</name>
        <path>Sounds/squeal2.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
        </volume>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <position>
            <x>-4.0 </x>
            <y> 0.0 </y>
            <z>-2.0 </z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>1000.0</max-dist>
    </squeal>

    <flap>
        <name>flaps</name>
        <path>Sounds/flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <position>
            <x>-1.0 </x>
            <y>-2.0 </y>
            <z>-1.0 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>10.0</max-dist>
    </flap>

    <speedbrake>
        <name>speedbrake</name>
        <path>Sounds/flaps.wav</path>
            <property>surface-positions/speedbrake-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/volume</property>
        </volume>
        <position>
            <x>-1.0 </x>
            <y>-2.0 </y>
            <z>-1.0 </z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>10.0</max-dist>
    </speedbrake>

    <wind>
        <name>wind</name>
        <path>Sounds/wind.wav</path>
        <property>velocities/airspeed-kt</property>
        <mode>looped</mode>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.002</factor>
            <min>0.0</min>
            <max>0.15</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
            <offset>1.25</offset>
        </pitch>
        <position>
            <x>2</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>5.0</max-dist>
    </wind>

               <!--  BRAKES   -->

        <brakes>
            <name>brake-lever-off</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/brake-lever.wav</path>
            <condition>
                <not>
                    <property>controls/gear/brake-parking</property>
                </not>
            </condition>
            <volume>
                <property>sim/signals/fdm-initialized</property>
            </volume>
            <pitch>
                <offset>0.8</offset>
            </pitch>
            <position>
                <x> 0.0 </x>
                <y> 0.0 </y>
                <z> 0.0 </z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </brakes>

        <brakes>
            <name>brake-lever-on</name>
            <mode>once</mode>
            <path>Aircraft/CitationX/Sounds/brake-lever.wav</path>
            <condition>
                <and>
                    <property>controls/gear/brake-parking</property>
                    <value>0</value>
                </and>
            </condition>
            <volume>
                <property>sim/signals/fdm-initialized</property>
            </volume>
            <pitch>
                <offset>0.8</offset>
            </pitch>
            <position>
                <x> 0.0 </x>
                <y> 0.0 </y>
                <z> 0.0 </z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </brakes>

    <click>
        <name>click1</name>
        <path>Sounds/click.wav</path>
        <type>avionics</type>
        <condition>
            <property>sim/sound/click</property>
        </condition>
    </click>

    <click>
        <name>click2</name>
        <path>Sounds/click.wav</path>
        <type>avionics</type>
        <condition>
            <not>
                <property>sim/sound/click</property>
            </not>
        </condition>
    </click>

    <warnings>
        <name>chime1</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/chime1.wav</path>
        <property>instrumentation/annunciators/master-caution</property>
        <mode>once</mode>
    </warnings>

    <warnings>
        <name>chime2</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/chime2.wav</path>
        <property>instrumentation/annunciators/master-warning</property>
        <mode>looped</mode>
    </warnings>

    <warnings>
        <name>gear-horn</name>
        <type>avionics</type>
        <path>Aircraft/CitationX/Sounds/horn.wav</path>
        <property>sim/sound/stall-horn</property>
        <mode>once</mode>
    </warnings>

</fx>

</PropertyList>
