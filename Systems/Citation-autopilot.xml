    </input>
    <reference>
        <value>0.0</value>
    </reference>
    <output>
        <prop>autopilot/internal/target-roll-deg</prop>
    </output>
    <config>
        <Kp>-1.0</Kp>
        <Ki>0.0</Ki>
        <u_min>
            <prop>instrumentation/flightdirector/roll-min</prop>
        </u_min>
        <u_max>
            <prop>instrumentation/flightdirector/roll-max</prop>
