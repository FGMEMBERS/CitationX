<pid-controller>
    <name>Aileron Control</name>
    <debug>false</debug>
    <enable>
        <prop>autopilot/locks/roll-active</prop>
        <value>true</value>
        <honor-passive>true</honor-passive>
    </enable>
    <input>
        <prop>orientation/roll-deg</prop>
    </input>
    <reference>
        <prop>autopilot/internal/target-roll-deg</prop>
    </reference>
    <output>
        <prop>controls/flight/aileron</prop>
    </output>
    <config>
        <Kp>0.5</Kp>
        <beta>1.0</beta>
        <alpha>0.1</alpha>
        <gamma>0.0</gamma>
        <Ti>1.0</Ti>
        <Td>0.0</Td>
        <u_min>
            <value>-1.0</value>
        </u_min>
        <u_max>
            <value>1.0</value>
        </u_max>
    </config>
</pid-controller>

