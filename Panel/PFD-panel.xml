<?xml version="1.0"?>
<PropertyList>

    <name>PFD 2d Panel</name>
    <background>Aircraft/Citation-Bravo/Panel/transparent-bg.rgb</background>
    <w>300</w>
    <h>200</h>

    <instruments>

        <instrument include="pfd-text.xml">
            <name>pfd</name>
            <condition>
                <and>
                    <property>instrumentation/primus1000/pfd/serviceable</property>
                    <greater-than>
                        <property>systems/electrical/ac-volts</property>
                        <value>15</value>
                    </greater-than>
                </and>
            </condition>
            <x>150</x>
            <y>100</y>
            <w>306</w>
            <h>204</h>
        </instrument>


    </instruments>
</PropertyList>
