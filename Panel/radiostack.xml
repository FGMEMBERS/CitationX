            </transformations>
        </layer>


<!-- KT70 1-->

        <layer>
            <name>xpdr1</name>
            <condition>
                <and>
                    <greater-than>
                        <property>instrumentation/kt-70/inputs/func-knob</property>
                        <value>0</value>
                    </greater-than>
                    <greater-than>
                        <property>systems/electrical/outputs/transponder</property>
                        <value>5</value>
                    </greater-than>
                </and>
            </condition>
            <type>text</type>
            <font>led</font>
            <point-size>3</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/kt-70/outputs/flight-level</property>
                    <format>%03.0f</format>
                </chunk>
                <chunk>
                    <type>literal</type>
                    <text>                  </text>
                </chunk>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/kt-70/outputs/id-code</property>
                    <format>%4.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-28</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-51</offset>
                </transformation>
            </transformations>
        </layer>

