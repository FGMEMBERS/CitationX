<?xml version="1.0"?>
<!--
Allied Signal CNI-5000 radio stack
-->
<PropertyList>

    <name>Allied Signal Radio</name>
    <w-base>129</w-base>
    <h-base>196</h-base>
    <w>129</w>
    <h>196</h>

    <layers>

<!-- Comm 1-->

        <layer>
            <name>com1 frequencies</name>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/comm</property>
                    <value>5</value>
                </greater-than>
            </condition>
            <type>text</type>
            <font>led</font>
            <point-size>3</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/comm[0]/frequencies/selected-mhz</property>
                    <format>%4.3f</format>
                </chunk>
                <chunk>
                    <type>literal</type>
                    <text>          </text>
                </chunk>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/comm[0]/frequencies/standby-mhz</property>
                    <format>%4.3f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-50</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>82</offset>
                </transformation>
            </transformations>
        </layer>

<!-- Comm 2-->

        <layer>
            <name>com2 frequencies</name>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/comm[1]</property>
                    <value>5</value>
                </greater-than>
            </condition>
            <type>text</type>
            <font>led</font>
            <point-size>3</point-size>
            <color>
                <red>0.75</red>
                <green>0.24</green>
                <blue>0.05</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
