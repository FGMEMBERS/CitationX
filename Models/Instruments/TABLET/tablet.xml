<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<path>tablet.ac</path>

    <animation>
        <type>textranslate</type>
        <object-name>LED</object-name>
        <property>systems/electrical/right-bus-norm</property>
        <factor>0.09</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ecran.off</object-name>
        <condition>
            <not>
              <property>systems/electrical/right-bus-norm</property>
          	</not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ecran.w</object-name>
        <condition>			
              <property>systems/electrical/right-bus-norm</property>
       	</condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ecran.c</object-name>
        <condition>
					<and>				
            <property>systems/electrical/right-bus-norm</property>
						<greater-than>
			        <property>position/altitude-agl-ft</property>
							<value>200</value>
						</greater-than>
					</and>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>Bouton.on</object-name>
        <property>controls/tablets/scr1-on</property>
				<factor>0.0030</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>Bouton.on</object-name>
      <visible>true</visible>
      <action>
          <button>0</button>
          <repeatable>false</repeatable>
     		<binding>
       		<command>property-toggle</command>
          <property>controls/tablets/scr1-on</property>
      	</binding>
			<binding>
	      <command>property-toggle</command>
	      <property>sim/sound/click</property>
 	     </binding>
        </action>
    </animation>


    <animation>
        <type>translate</type>
        <object-name>Bouton1</object-name>
        <property>controls/tablets/scr1-selected</property>
				<factor>0.0020</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>Bouton1</object-name>
      <visible>true</visible>
      <action>
          <button>0</button>
          <repeatable>false</repeatable>
     		<binding>
       		<command>property-toggle</command>
          <property>controls/tablets/scr1-selected</property>
      </binding>
			<binding>
	      <command>property-toggle</command>
	      <property>sim/sound/click</property>
 	     </binding>
        </action>
    </animation>

    <animation>
        <name>green</name>
        <type>material</type>
        <object-name>LED</object-name>
        <emission>
            <red-prop>sim/color-set/green/r</red-prop>
            <green-prop>sim/color-set/green/g</green-prop>
            <blue-prop>sim/color-set/green/b</blue-prop>
            <alpha-prop>sim/color-set/green/a</alpha-prop>
        </emission>
    </animation>

    <effect>
      <inherits-from>Aircraft/CitationX/Models/Effects/test_reflect</inherits-from>
        <object-name>Bouton1</object-name>
        <object-name>Bouton2</object-name>
        <object-name>Bouton3</object-name>
        <object-name>Bouton4</object-name>
        <object-name>LED</object-name>
        <object-name>coque</object-name>
        <object-name>ecran</object-name>
        <object-name>ecran1</object-name>
        <object-name>ecran2</object-name>
        <object-name>support</object-name>
        <object-name>support1</object-name>
        <object-name>support2</object-name>
    </effect>

    <effect>
      <inherits-from>Aircraft/CitationX/Models/Effects/skin-reflect</inherits-from>
        <object-name>Bouton1</object-name>
        <object-name>Bouton2</object-name>
        <object-name>Bouton3</object-name>
        <object-name>Bouton4</object-name>
        <object-name>LED</object-name>
        <object-name>coque</object-name>
        <object-name>ecran</object-name>
        <object-name>ecran1</object-name>
        <object-name>ecran2</object-name>
        <object-name>support</object-name>
        <object-name>support1</object-name>
        <object-name>support2</object-name>
    </effect>

</PropertyList>
