<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

<path>nav2.ac</path>

<!-- NAV2 Controls -->

    <animation>
        <type>select</type>
        <condition>
            <property>sim/model/nav2-visible</property>
        </condition>
        <object-name>Nav2-socle</object-name>
        <object-name>Contours-molettes</object-name>
        <object-name>RIC2.crs</object-name>
        <object-name>RIC2.alt</object-name>
        <object-name>RIC2.hdg</object-name>
        <object-name>etiquettes-nav2</object-name>
        <object-name>vis-nav2</object-name>
    </animation>

    <animation>
      <type>material</type>
      <object-name>Nav2-socle</object-name>
      <object-name>Contours-molettes</object-name>
      <object-name>etiquettes-nav2</object-name>
			<condition>
				<or>
					<property>systems/electrical/left-emer-bus</property>
					<property>systems/electrical/right-emer-bus</property>
					<property>systems/electrical/left-bus-norm</property>
					<property>systems/electrical/right-bus-norm</property>
				</or>
			</condition>
      <emission>
          <red>1</red>
          <green>1</green>
          <blue>1</blue>
          <factor-prop>controls/lighting/flood-norm</factor-prop>
      </emission>
    </animation>

    <animation>
      <type>material</type>
        <object-name>RIC2.crs</object-name>
        <object-name>RIC2.hdg</object-name>
        <condition>
						<or>
	           	<property>systems/electrical/left-emer-bus</property>
	           	<property>systems/electrical/left-bus-norm</property>
						</or>
        </condition>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

<animation>
    <type>pick</type>
    <object-name>RIC2.crs</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-assign</command>
            <property>instrumentation/nav[1]/radials/selected-deg</property>
            <property>orientation/heading-magnetic-deg</property>
        </binding>
    </action>
    <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav[1]/radials/selected-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
    <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav[1]/radials/selected-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>CRS2-selected</tooltip-id>
                <label>CRS2 sel: %.0f</label>
            <property>instrumentation/nav[1]/radials/selected-deg</property>
            </binding>
        </hovered>
</animation>

<animation>
    <type>pick</type>
    <object-name>RIC2.hdg</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-assign</command>
            <property>autopilot/settings/heading-bug-deg</property>
            <property>orientation/heading-magnetic-deg</property>
        </binding>
    </action>
    <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>autopilot/settings/heading-bug-deg</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
    <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>autopilot/settings/heading-bug-deg</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
        </binding>
    </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>HDG</tooltip-id>
                <label>HDG sel: %.0f</label>
            <property>autopilot/settings/heading-bug-deg</property>
            </binding>
        </hovered>
</animation>

<animation>
    <type>pick</type>
    <object-name>RIC2.alt</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
					<command>nasal</command>
					<script>citation.set_alt();</script>
        </binding>
    </action>
    <action>
        <button>3</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>autopilot/settings/asel</property>
            <step>5</step>
            <min>0</min>
            <max>510</max>
            <wrap>0</wrap>
        </binding>
    </action>
    <action>
        <button>4</button>
        <repeatable>true</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>autopilot/settings/asel</property>
            <step>-5</step>
            <min>0</min>
            <max>510</max>
            <wrap>0</wrap>
        </binding>
    </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>AP-ALT</tooltip-id>
                <label>ALT sel: %.0f</label>
            <property>autopilot/settings/asel</property>
            </binding>
        </hovered>
</animation>

</PropertyList>
