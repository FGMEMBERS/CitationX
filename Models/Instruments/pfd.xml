    <object-name>Alt1000</object-name>
    <object-name>Alt100</object-name>
    <object-name>Alt10</object-name>
    <object-name>ASIribbon</object-name>
    <object-name>ALTribbon</object-name>
</animation>

<animation>
    <name>HSIrose</name>
    <object-name>crt.rose</object-name>
    <object-name>rose</object-name>
    <object-name>hdgbug</object-name>
    <object-name>CRSneedle</object-name>
    <object-name>CRSneedle.001</object-name>
</animation>

<animation>
    <name>HSIarc</name>
    <object-name>crt.arc</object-name>
    <object-name>arc</object-name>
</animation>

<animation>
    <name>HSImain</name>
    <object-name>VSIneedle</object-name>
    <object-name>Warrow</object-name>
    <object-name>Std</object-name>
    <object-name>RaBaro</object-name>
    <object-name>SlipBall</object-name>
</animation>

<animation>
    <type>select</type>
    <object-name>PFD.off</object-name>
    <condition>
        <or>
            <not>
                <property>instrumentation/primus1000/pfd/serviceable</property>
            </not>
            <less-than>
                <property>systems/electrical/ac-volts</property>
                <value>15</value>
            </less-than>
        </or>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>FDbars</object-name>
    <condition>
        <or>
            <greater-than>
                <property>instrumentation/flightdirector/lnav</property>
                <value>0</value>
            </greater-than>
            <greater-than>
                <property>instrumentation/flightdirector/vnav</property>
                <value>0</value>
            </greater-than>
        </or>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>GSscale</object-name>
    <object-name>GSneedle</object-name>
    <condition>
        <and>
            <equals>
                <property>instrumentation/flightdirector/glideslope</property>
                <value>true</value>
            </equals>
            <property>instrumentation/flightdirector/in-range</property>
        </and>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>HSIarc</object-name>
    <condition>
        <property>instrumentation/primus1000/dc550/hsi</property>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>crt.et</object-name>
    <condition>
        <equals>
            <property>instrumentation/primus1000/dc550/timer</property>
            <value>2</value>
        </equals>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>crt.gspd</object-name>
    <condition>
        <equals>
            <property>instrumentation/primus1000/dc550/timer</property>
            <value>0</value>
        </equals>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>crt.ttg</object-name>
    <condition>
        <equals>
            <property>instrumentation/primus1000/dc550/timer</property>
            <value>1</value>
        </equals>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>HSIrose</object-name>
    <condition>
        <not>
            <property>instrumentation/primus1000/dc550/hsi</property>
        </not>
    </condition>
</animation>

