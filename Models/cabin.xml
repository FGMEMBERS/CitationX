<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>cabin.ac</path>

  <!-- Chrome Effect for interior parts -->
  <animation>
    <type>material</type>
    <object-name>Cabin-LightsSup</object-name>
    <object-name>Sphere</object-name>
    <emission>
      <red>   0.32 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

    <effect>
      <inherits-from>Aircraft/CitationX/Models/Effects/test_reflect</inherits-from>
    <object-name>Cabin-LightsSup</object-name>
    <object-name>Sphere</object-name>
    </effect>

    <effect>
      <inherits-from>Aircraft/CitationX/Models/Effects/skin-reflect</inherits-from>
    <object-name>Cabin-LightsSup</object-name>
    <object-name>Sphere</object-name>
    </effect>

<!-- EXT CABIN DOOR -->

	<animation>
	<type>translate</type>
        <object-name>Cabin.inrdoor</object-name>
        <property>sim/multiplay/generic/float</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>0.0</dep></entry>
            <entry><ind>1.0</ind><dep>0.4</dep></entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>-1.0</z>
        </axis>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>Cabin.inrdoor</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>controls/cabin-door/open</property>
        </binding>
      </action>
    </animation> 

    <animation>
        <type>rotate</type>
        <object-name>Cabin.inrdoor</object-name>
        <property>sim/multiplay/generic/float</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>0.0</dep></entry>
            <entry><ind>1.0</ind><dep>140.0</dep></entry>
        </interpolation>
        <center>
            <x-m>-5.594</x-m>
            <y-m>-0.813</y-m>
            <z-m>-0.468</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

<!-- CABIN SEPARATION DOORS -->
 
   <animation>
      <type>pick</type>
      <object-name>L-cabin-door</object-name>
      <object-name>R-cabin-door</object-name>
      <visible>true</visible>
			<action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
					<condition>
						<equals>
		          <property>controls/separation-door/open</property>						
							<value>1.0</value>
						</equals>
					</condition>
		         <command>property-interpolate</command>
		          <property>controls/separation-door/open</property>
							<value type="double">0.0</value>
					<time>2</time>
        </binding>
        <binding>
					<condition>
						<equals>
		          <property>controls/separation-door/open</property>						
							<value>0.0</value>
						</equals>
					</condition>
		         <command>property-interpolate</command>
		          <property>controls/separation-door/open</property>
							<value type="double">1.0</value>
					<time>2</time>
        </binding>
			</action>
    	<hovered>
				<binding>
          <command>set-tooltip</command>
            <tooltip-id>Separation-doors</tooltip-id>
            <label>Separation doors: %s</label>
            <mapping>open-close</mapping>
       			<property>controls/separation-door/open</property>
        </binding>
      </hovered>
    </animation> 

    <animation>
        <type>translate</type>
        <object-name>L-cabin-door</object-name>	
        <property>controls/separation-door/open</property>
				<factor>0.15</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>R-cabin-door</object-name>	
        <property>controls/separation-door/open</property>
				<factor>0.14</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

<!-- TOILET DOORS -->
 
   <animation>
      <type>pick</type>
      <object-name>L-toilet-door</object-name>
      <object-name>R-toilet-door</object-name>
      <visible>true</visible>
			<action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
					<condition>
						<equals>
		          <property>controls/toilet-door/open</property>						
							<value>0.0</value>
						</equals>
					</condition>
		         <command>property-interpolate</command>
		          <property>controls/toilet-door/open</property>
							<value type="double">1.0</value>
					<time>2</time>
        </binding>
        <binding>
					<condition>
						<equals>
		          <property>controls/toilet-door/open</property>						
							<value>1.0</value>
						</equals>
					</condition>
		         <command>property-interpolate</command>
		          <property>controls/toilet-door/open</property>
							<value type="double">0.0</value>
					<time>2</time>
        </binding>
			</action>
    	<hovered>
				<binding>
          <command>set-tooltip</command>
            <tooltip-id>Toilet-doors</tooltip-id>
            <label>Toilet-doors: %s</label>
            <mapping>open-close</mapping>
       			<property>controls/toilet-door/open</property>
        </binding>
      </hovered>
    </animation> 

    <animation>
        <type>translate</type>
        <object-name>L-toilet-door</object-name>	
        <property>controls/toilet-door/open</property>
				<factor>0.13</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>R-toilet-door</object-name>	
        <property>controls/toilet-door/open</property>
				<factor>0.13</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

<!-- CABIN SEATS -->
    <model>
        <name>Cabin-seats</name>
        <path>Aircraft/CitationX/Models/Seats/Cabin-seats.xml</path>
        <offsets>
            <x-m> 0.00 </x-m>
            <y-m> 0.00 </y-m>
            <z-m> 0.00</z-m>
            <pitch-deg>0</pitch-deg>
        </offsets>
    </model>

</PropertyList>
