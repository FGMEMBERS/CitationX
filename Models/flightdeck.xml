<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

    <path>flightdeck.ac</path>

    <model>
        <name>panel1</name>
        <path>Aircraft/CitationX/Models/panel.xml</path>
        <offsets>
            <x-m>-1.123</x-m>
            <y-m>0</y-m>
            <z-m>0.426</z-m>
            <pitch-deg>-15</pitch-deg>
        </offsets>
    </model>

    <model>
        <name>pedestal</name>
        <path>Aircraft/CitationX/Models/pedestal.xml</path>
        <offsets>
            <x-m>-1.123</x-m>
            <y-m>0</y-m>
            <z-m>0.426</z-m>
        </offsets>
    </model>

    <animation>
        <type>select</type>
        <object-name>panel1</object-name>
        <object-name>pedestal</object-name>
        <condition>
            <property>sim/current-view/internal</property>
        </condition>
    </animation>

<!-- Instruments-->

    <animation>
        <type>rotate</type>
        <object-name>compassrose</object-name>
        <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
        <axis>
            <x>0.0</x>
            <y>0.0</y>
            <z>1.0</z>
        </axis>
        <center>
            <x-m>-1.237</x-m>
            <y-m>0.00</y-m>
            <z-m>0.916</z-m>
        </center>
    </animation>
<!-- text -->

    <text>
        <name>APUrpm</name>
        <offsets>
            <x-m>-0.876</x-m>
            <y-m>0.700</y-m>
            <z-m>0.517</z-m>
        </offsets>
        <alignment>center-center</alignment>
        <axis-alignment>xz-plane</axis-alignment>
        <type type="string">number-value</type>
        <property>controls/APU/rpm</property>
        <scale>100.0</scale>
        <format>%3.1f</format>
        <font>led.txf</font>
        <character-size>0.009</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
    </text>

    <text>
        <name>APUrpmTest</name>
        <offsets>
            <x-m>-0.876</x-m>
            <y-m>0.700</y-m>
            <z-m>0.517</z-m>
        </offsets>
        <alignment>center-center</alignment>
        <axis-alignment>xz-plane</axis-alignment>
        <type type="string">number-value</type>
        <property>controls/APU/rpm-test</property>
        <scale>1</scale>
        <format>%3.0f</format>
        <font>led.txf</font>
        <character-size>0.009</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
    </text>

    <text>
        <name>APUegt</name>
        <offsets>
            <x-m>-0.876</x-m>
            <y-m>0.700</y-m>
            <z-m>0.494</z-m>
        </offsets>
        <alignment>center-center</alignment>
        <axis-alignment>xz-plane</axis-alignment>
        <type type="string">number-value</type>
        <property>controls/APU/rpm</property>
        <scale>710.0</scale>
        <format>%3.0f</format>
        <font>led.txf</font>
        <character-size>0.009</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
    </text>

    <text>
        <name>APUegtTest</name>
        <offsets>
            <x-m>-0.876</x-m>
            <y-m>0.700</y-m>
            <z-m>0.494</z-m>
        </offsets>
        <alignment>center-center</alignment>
        <axis-alignment>xz-plane</axis-alignment>
        <type type="string">number-value</type>
        <property>controls/APU/rpm-test</property>
        <scale>10</scale>
        <format>%3.0f</format>
        <font>led.txf</font>
        <character-size>0.009</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
    </text>

    <text>
        <name>APUvolts</name>
        <offsets>
            <x-m>-0.876</x-m>
            <y-m>0.700</y-m>
            <z-m>0.471</z-m>
        </offsets>
        <alignment>center-center</alignment>
        <axis-alignment>xz-plane</axis-alignment>
        <type type="string">number-value</type>
        <property>controls/APU/battery</property>
        <format>%2.1f</format>
        <font>led.txf</font>
        <character-size>0.009</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
    </text>

    <text>
        <name>FLmeter</name>
        <offsets>
            <x-m>-0.842</x-m>
            <y-m>0.700</y-m>
            <z-m>0.626</z-m>
        </offsets>
        <alignment>right-center</alignment>
        <axis-alignment>xz-plane</axis-alignment>
        <type type="string">number-value</type>
        <property>instrumentation/clock/flight-meter-hour</property>
        <format>%4.1f</format>
        <font>helvetica_bold.txf</font>
        <character-size>0.009</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
    </text>

    <animation>
        <type>select</type>
        <object-name>APUrpm</object-name>
        <object-name>APUegt</object-name>
        <condition>
            <property>controls/APU/master</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>APUrpmTest</object-name>
        <object-name>APUegtTest</object-name>
        <condition>
            <property>controls/APU/test</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>APUvolts</object-name>
        	<condition>
						<or>
            	<property>controls/APU/master</property>
            	<property>controls/APU/test</property>
						</or>
        </condition>
    </animation>

<!-- hotspots -->

    <animation>
        <type>pick</type>
        <object-name>APU.master</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>controls/APU/master</property>
            </binding>
						<binding>
            	<command>property-toggle</command>
            	<property>sim/sound/click</property>
						</binding>
						<binding>
							<condition>
                <property>controls/APU/master</property>
							</condition>
								<command>property-assign</command>
                <property>controls/APU/battery</property>
                <value>28</value>
            </binding>
						<binding>
							<condition>
									<not>
	                	<property>controls/APU/master</property>
									</not>
						</condition>
								<command>property-assign</command>
                	<property>controls/APU/running</property>
                	<value>0</value>
						</binding>
						<binding>
							<condition>
								<not>
                	<property>controls/APU/master</property>
								</not>
							</condition>
								<command>property-assign</command>
                	<property>controls/APU/battery</property>
                	<value>0</value>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>APU-master-switch</tooltip-id>
                <label>APU-master: %s</label>
                <mapping>on-off</mapping>
            <property>controls/APU/master</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>APU.master</object-name>
        <property>controls/APU/master</property>
        <factor>30</factor>
        <center>
           <x-m>-0.830</x-m>
            <y-m>0.698</y-m>
            <z-m>0.434</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>APU.on_off</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/APU/start-stop</property>
									<value>1.0</value>
 	          </binding>
						<binding>
            	<command>property-toggle</command>
            	<property>sim/sound/click</property>
						</binding>
            <binding>
							<condition>
								<and>
									<property>controls/APU/master</property>
									<property>controls/APU/start-stop</property>
								</and>
							</condition>
              <command>property-assign</command>
                <property>controls/APU/running</property>
                <value>1</value>
            </binding>
					<mod-up>
			       <binding>
         				<command>property-assign</command>
         					<property>controls/APU/start-stop</property>
         						<value>0</value>
       				</binding>
     			</mod-up>
       </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>APU.on</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/APU/start-stop</property>
									<value>1.0</value>
 	          </binding>
						<binding>
            	<command>property-toggle</command>
            	<property>sim/sound/click</property>
						</binding>
            <binding>
							<condition>
								<and>
									<property>controls/APU/master</property>
									<property>controls/APU/start-stop</property>
								</and>
							</condition>
              <command>property-assign</command>
                <property>controls/APU/running</property>
                <value>1</value>
            </binding>
					<mod-up>
			       <binding>
         				<command>property-assign</command>
         					<property>controls/APU/start-stop</property>
         						<value>0</value>
       				</binding>
     			</mod-up>
       </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>APU.off</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>controls/APU/start-stop</property>
									<value>-1</value>
 	          </binding>
						<binding>
            	<command>property-toggle</command>
            	<property>sim/sound/click</property>
						</binding>
            <binding>
              <command>property-assign</command>
                <property>controls/APU/running</property>
                <value>false</value>
            </binding> 
					<mod-up>
			       <binding>
         				<command>property-assign</command>
         					<property>controls/APU/start-stop</property>
         						<value>0</value>
       				</binding>
     			</mod-up>
       </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>APU.on_off</object-name>
        <property>controls/APU/start-stop</property>
        <factor>30</factor>
        <center>
           <x-m>-0.830</x-m>
            <y-m>0.698</y-m>
            <z-m>0.434</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>APU.test</object-name>	
        <property>controls/APU/test</property>
				<factor>-0.005</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

<animation>
    <type>pick</type>
    <object-name>APU.test</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
            <property>sim/sound/click</property>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/APU/test</property>
							<value>1</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/APU/rpm-test</property>
							<value>50</value>
        </binding>
        <binding>
					<condition>
						<not>
							<property>controls/APU/master</property>
						</not>
					</condition>
            <command>property-assign</command>
            <property>controls/APU/battery</property>
							<value>24</value>
       </binding>
			<mod-up>
       		<binding>
         		<command>property-assign</command>
            <property>controls/APU/test</property>
							<value>0</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/APU/rpm-test</property>
							<value>0</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>controls/APU/battery</property>
							<value>0</value>
        </binding>
			</mod-up>
    </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>APU.test</tooltip-id>
                <label>Test APU</label>
                <mapping>push</mapping>
            		<property>controls/APU/test</property>
            </binding>
        </hovered>
</animation>

    <animation>
        <type>rotate</type>
        <object-name>APU.bleed</object-name>
        <property>controls/APU/bleed</property>
        <factor>30</factor>
        <center>
           <x-m>-0.930</x-m>
            <y-m>0.698</y-m>
            <z-m>0.570</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>APU.bleed</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>controls/APU/bleed</property>
            </binding>
						<binding>
            	<command>property-toggle</command>
            	<property>sim/sound/click</property>
						</binding>
	       </action>
				 <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>APU-bleed air</tooltip-id>
                <label>APU-bleed air: %s</label>
                <mapping>on-off</mapping>
            <property>controls/APU/bleed</property>
            </binding>
        </hovered>
    </animation>

</PropertyList>
