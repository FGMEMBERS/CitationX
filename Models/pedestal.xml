<!--SPEEDBRAKE -->

    <animation>
        <type>rotate</type>
        <object-name>Speedbrk.lever</object-name>
        <property>controls/flight/speedbrake</property>
        <factor>55</factor>
        <center>
            <x-m>0.425</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.201</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
