    </animation>

	<animation>
    <type>pick</type>
    <object-name>Speedbrk.lever</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
            <property>controls/flight/speedbrake</property>
        </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>SpeedBrake</tooltip-id>
        <label>Speedbrake: %s</label>
        <mapping>on-off</mapping>
        <property>controls/flight/speedbrake</property>
        </binding>
    </hovered>
	</animation>

<!-- PARKING BRAKE -->

    <animation>
      <type>pick</type>
      <object-name>ParkBrake</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
					<condition>
						<equals>
			        <property>controls/gear/brake-parking</property>
							<value>1.0</value>
						</equals>
					</condition>
	        <command>property-interpolate</command>
		        <property>controls/gear/brake-parking</property>
						<value type="double">0.0</value>
					<time>1</time>
        </binding>
        <binding>
					<condition>
						<equals>
			        <property>controls/gear/brake-parking</property>
							<value>0.0</value>
						</equals>
					</condition>
	        <command>property-interpolate</command>
		        <property>controls/gear/brake-parking</property>
						<value type="double">1.0</value>
					<time>1</time>
        </binding>
      </action>
       <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>ParkBrake</tooltip-id>
                <label>Parking Brake: %s</label>
                <mapping>on-off</mapping>
                <property>controls/gear/brake-parking</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>ParkBrake</object-name>	
        <property>controls/gear/brake-parking</property>
				<factor>-0.03</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

	<animation>
        <type>rotate</type>
        <object-name>ParkBrake</object-name>	
				<property>controls/gear/brake-parking</property>
        <factor>-90</factor>
        <center>
