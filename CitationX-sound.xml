<?xml version="1.0"?>

<PropertyList>

<fx>

    <engine>
        <name>left engine</name>
        <path>Sounds/jet.wav</path>
        <condition>
            <not>
                <property>controls/engines/engine[0]/cutoff</property>
            </not>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[0]/turbine</property>
            <factor>0.007</factor>
        </volume>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <position>
            <x>4.5</x>
            <y>1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>50.0</max-dist>
    </engine>

    <engine>
        <name>left n1</name>
        <path>Sounds/whine.wav</path>
        <condition>
            <greater-than>
                <property>engines/engine/fan</property>
                <value>10</value>
            </greater-than>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine/fan</property>
            <factor>0.005</factor>
        </volume>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <pitch>
            <property>engines/engine/fan</property>
            <offset>0</offset>
            <factor>0.03</factor>
        </pitch>
        <position>
            <x>3</x>
            <y>1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>40.0</max-dist>
    </engine>

    <engine>
        <name>right engine</name>
        <path>Sounds/jet.wav</path>
        <condition>
            <not>
                <property>controls/engines/engine[1]/cutoff</property>
            </not>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[1]/turbine</property>
            <factor>0.007</factor>
        </volume>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <position>
            <x>4.5</x>
            <y>1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>50.0</max-dist>
    </engine>

    <engine>
        <name>right n1</name>
        <path>Sounds/whine.wav</path>
        <condition>
            <greater-than>
                <property>engines/engine[1]/fan</property>
                <value>10</value>
            </greater-than>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>engines/engine[1]/fan</property>
            <factor>0.005</factor>
        </volume>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <pitch>
            <property>engines/engine[1]/fan</property>
            <offset>0</offset>
            <factor>0.03</factor>
        </pitch>
        <position>
            <x>3</x>
            <y>1.7</y>
            <z>0.6</z>
        </position>
        <reference-dist>20.0</reference-dist>
        <max-dist>40.0</max-dist>
    </engine>


    <gear>
        <name>gear</name>
        <path>Sounds/gear.wav</path>
        <property>gear/gear[0]/position-norm</property>
        <mode>in-transit</mode>
        <pitch>
            <internal>dt_play</internal>
            <offset>0.8</offset>
            <factor>-0.001</factor>
        </pitch>
        <position>
            <x>-7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>20.0</max-dist>
    </gear>

    <gear>
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </equals>
        </condition>
        <position>
            <x>-7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>20.0</max-dist>
    </gear>

    <gear>
        <name>gear-horn</name>
        <path>Sounds/gear-hrn.wav</path>
        <condition>
            <property>sim/sound/stall-horn</property>
        </condition>
        <mode>looped</mode>
        <volume>
            <property>sim/sound/stall-horn</property>
            <factor>0.7</factor>
        </volume>
        <position>
            <x>-7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>5.0</max-dist>
    </gear>

    <squeal>
        <name>squeal</name>
        <path>Sounds/squeal.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/speed-down-fps</property>
            <factor>0.05</factor>
        </volume>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.05</factor>
        </volume>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.0025</factor>
            <offset>1.5</offset>
        </pitch>
        <position>
            <x>-4</x>
            <y>0</y>
            <z>-2</z>
        </position>
        <reference-dist>10.0</reference-dist>
        <max-dist>50.0</max-dist>
    </squeal>

    <rumble>
        <name>rumble</name>
		<mode>looped</mode>
        <path>Sounds/rumble.wav</path>
        <condition>
            <or>
                <property>gear/gear[0]/wow</property>
                <property>gear/gear[1]/wow</property>
                <property>gear/gear[2]/wow</property>
            </or>
        </condition>
        <volume>
            <property>velocities/groundspeed-kt</property>
            <factor>0.05</factor>
			<min>0</min>
			<max>0.3</max>
        </volume>
        <position>
            <x>-8</x>
            <y>0</y>
            <z>-1</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>2.0</max-dist>
    </rumble>

    <flap>
        <name>flaps</name>
        <path>Sounds/flaps.wav</path>
        <property>surface-positions/flap-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <position>
            <x>-7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>2.0</max-dist>
    </flap>

    <speedbrake>
        <name>speedbrake</name>
        <path>Sounds/flaps.wav</path>
        <property>surface-positions/speedbrake-pos-norm</property>
        <mode>in-transit</mode>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <position>
            <x>-7</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1.0</reference-dist>
        <max-dist>2.0</max-dist>
    </speedbrake>

    <wind>
        <name>wind</name>
		<condition>
		<property>sim/current-view/internal</property>
		</condition>
        <path>Sounds/wind.wav</path>
        <property>velocities/airspeed-kt</property>
        <mode>looped</mode>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.0005</factor>
            <min>0.0</min>
            <max>0.3</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
            <offset>1.0</offset>
        </pitch>
        <position>
            <x>-8</x>
            <y>0</y>
            <z>0.</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>2.0</max-dist>
    </wind>

    <click>
        <name>click1</name>
        <path>Sounds/click.wav</path>
        <condition>
            <property>sim/sound/click</property>
        </condition>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <position>
            <x>-8</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>2.0</max-dist>
    </click>

    <click>
        <name>click2</name>
        <path>Sounds/click.wav</path>
        <condition>
            <not>
                <property>sim/sound/click</property>
            </not>
        </condition>
        <volume>
            <property>sim/sound/ext-volume</property>
        </volume>
        <position>
            <x>-8</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>1</reference-dist>
        <max-dist>2.0</max-dist>
    </click>

</fx>

</PropertyList>