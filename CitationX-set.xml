Cessna Citation-X
Started Oct 2005  Syd Adams
************************************************************************
-->
<PropertyList>
    <sim>
        <description>Cessna Citation-X</description>
        <author>Syd Adams</author>
        <status>devel</status>
        <flight-model>yasim</flight-model>
        <aero>CitationX</aero>
        <fuel-fraction>0.5</fuel-fraction>

        <startup>
            <splash-texture>Aircraft/CitationX/Splash.png</splash-texture>
        </startup>

        <tutorials>
            <tutorial include="Tutorials/startup_tutorial.xml"/>
            <tutorial include="Tutorials/navigation.xml"/>
        </tutorials>

        <model>
            <path>Aircraft/CitationX/Models/Citation-X.xml</path>
            <livery>
                <file type="string">Blackstripes</file>
            </livery>
        </model>

        <view n="0">
            <name>Cockpit</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <x-offset-m type="double">-0.375</x-offset-m>
                <y-offset-m type="double">0.41</y-offset-m>
                <z-offset-m type="double">-7.0</z-offset-m>
                <pitch-offset-deg>-12</pitch-offset-deg>
                <limits>
                    <enabled type="bool">true</enabled>
                    <left>
                        <heading-max-deg type="double">120</heading-max-deg>
                        <x-offset-max-m type="double">0.20</x-offset-max-m>
                        <x-offset-threshold-deg type="double">45</x-offset-threshold-deg>
                    </left>
                    <right>
                        <heading-max-deg type="double">160</heading-max-deg>
                        <x-offset-max-m type="double">0.20</x-offset-max-m>
                        <x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
                    </right>
                </limits>
            </config>
        </view>

  <view n="100">
    <name>Passenger 1</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <heading-offset-deg type="double">0</heading-offset-deg>
      <x-offset-m archive="y" type="double">-0.41</x-offset-m> <!--Right-->
      <y-offset-m archive="y" type="double">0.4</y-offset-m> <!--Up-->
      <z-offset-m archive="y" type="double">-3.33</z-offset-m> <!--Back-->
      <default-heading-offset-deg>0</default-heading-offset-deg>
      <pitch-offset-deg>0</pitch-offset-deg>
                <limits>
                    <enabled type="bool">true</enabled>
                    <left>
                        <heading-max-deg type="double">120</heading-max-deg>
                        <x-offset-max-m type="double">0.28</x-offset-max-m>
                        <x-offset-threshold-deg type="double">0</x-offset-threshold-deg>
                    </left>
                    <right>
                        <heading-max-deg type="double">170</heading-max-deg>
                        <x-offset-max-m type="double">0.25</x-offset-max-m>
                        <x-offset-threshold-deg type="double">0</x-offset-threshold-deg>
                    </right>
                </limits>
      <dynamic-view type="bool">false</dynamic-view>
    </config>
    </view>

  <view n="101">
    <name>Passenger 2</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <heading-offset-deg type="double">0</heading-offset-deg>
      <x-offset-m archive="y" type="double">0.41</x-offset-m> <!--Right-->
      <y-offset-m archive="y" type="double">0.4</y-offset-m> <!--Up-->
      <z-offset-m archive="y" type="double">-1.04</z-offset-m> <!--Back-->
      <default-heading-offset-deg>0</default-heading-offset-deg>
      <pitch-offset-deg>0</pitch-offset-deg>
      <pitch-offset-deg>0</pitch-offset-deg>
                <limits>
                    <enabled type="bool">true</enabled>
                    <left>
                        <heading-max-deg type="double">120</heading-max-deg>
                        <x-offset-max-m type="double">0.25</x-offset-max-m>
                        <x-offset-threshold-deg type="double">45</x-offset-threshold-deg>
                    </left>
                    <right>
                        <heading-max-deg type="double">120</heading-max-deg>
                        <x-offset-max-m type="double">0.28</x-offset-max-m>
                        <x-offset-threshold-deg type="double">45</x-offset-threshold-deg>
                    </right>
                </limits>
      <dynamic-view type="bool">false</dynamic-view>
    </config>
    </view>

        <allow-toggle-cockpit>true</allow-toggle-cockpit>
        <chase-distance-m type="double">-30.0</chase-distance-m>

    <airport>
        <runways>
            <start-offset-m>20</start-offset-m>
        </runways>
    </airport>

    <systems>
        <path>Aircraft/CitationX/Systems/systems.xml</path>
        <autopilot>
            <path>Aircraft/CitationX/Systems/Citation-autopilot.xml</path>
        </autopilot>
    </systems>

    <sound>
        <path>Aircraft/CitationX/CitationX-sound.xml</path>
    </sound>

    <virtual-cockpit archive="y">true</virtual-cockpit>

        <weight n="0">
            <name>Crew</name>
            <weight-lb>400</weight-lb>
            <max-lb>400</max-lb>
            <min-lb>180</min-lb>
        </weight>

        <weight n="1">
            <name>Passengers</name>
            <weight-lb>6400</weight-lb>
            <max-lb>14300</max-lb>
            <min-lb>0</min-lb>
        </weight>

    <menubar>
        <default>
            <menu n="3">
                <item n="0">
                <label>Autopilot Settings</label>
                    <binding>
                        <command>nasal</command>
                        <script>citation.ap_settings.open()</script>
                    </binding>
                </item>
            </menu>
            <menu n="10">
                <label>Citation-X</label>
                <enabled type="bool">true</enabled>
            <item>
                <label>Select Livery</label>
                <binding>
                    <command>nasal</command>
                        <script>aircraft.livery.dialog.toggle()</script>
                    </binding>
                </item>
            </menu>
        </default>
    </menubar>

        <help>
            <title>Cessna Citation-X</title>
            <line></line>
            <key>
                <name>Keypad Delete</name>
                <desc>Toggle thrust reversers</desc>
            </key>
            <key>
                <name>Control B</name>
                <desc>Speedbrakes</desc>
            </key>
        </help>

        <flaps>
            <setting>0.0</setting> <!-- 0 -->
            <setting>0.142</setting> <!-- 5 -->
            <setting>0.428</setting> <!-- 15 -->
            <setting>1.0</setting> <!-- 35 -->
        </flaps>

        <instrumentation>
            <path>Aircraft/CitationX/instrumentation.xml</path>
        </instrumentation>

    <multiplay>
        <generic>
            <int n="0" alias="/systems/electrical/outputs/strobe"/>
			<int n="1" alias="/systems/electrical/outputs/beacon"/>
			<int n="2" alias="/systems/electrical/outputs/taxi-lights"/>
			<int n="3" alias="/systems/electrical/outputs/landing-light[0]"/>
			<int n="4" alias="/systems/electrical/outputs/landing-light[1]"/>
			<int n="5" alias="/systems/electrical/outputs/recog-lights"/>
			<int n="6" alias="/systems/electrical/outputs/navlights"/>
			<float  alias="/controls/cabin-door/position-norm"/>
			<float  n="1" alias="/surface-positions/speedbrake-pos-norm"/>
			<float  n="2" alias="/surface-positions/reverser-norm"/>
			<string  alias="/sim/multiplay/callsign"/>
        </generic>
    </multiplay>

    </sim>

    <systems>
        <electrical>
            <ac-volts>0</ac-volts>
        </electrical>
    </systems>

    <instrumentation>

        <mk-viii>
            <serviceable>true</serviceable>
            <configuration-module>
                <category-1>1</category-1>	<!-- GA Fast, 150' Mode 4B -->
            </configuration-module>
            <inputs>
                <arinc429>
                    <decision-height-ncd>false</decision-height-ncd>
                    <decision-height>200</decision-height>
                </arinc429>
            </inputs>
            <speaker>
            <volume>0.4</volume>
            </speaker>
        </mk-viii>

        <radar>
            <switch type="string" archive="y">on</switch>
            <mode-control type="int" archive="y">1</mode-control>
            <display-controls>
                <WX type="bool" archive="y">false</WX>
                <pos type="bool" archive="y">true</pos>
                <data type="bool" archive="y">true</data>
                <symbol type="bool" archive="y">true</symbol>
                <rotate type="bool" archive="y">true</rotate>
            </display-controls>
            <serviceable type="bool">true</serviceable>
            <range type="int" archive="y">5</range>
            <reference-range-nm type="double" archive="y">640</reference-range-nm>
            <mode type="string" archive="y">WX</mode>
            <font>
                <name type="string">typewriter.txf</name>
                <size type="float">6</size>
                <line-spacing type="float">0.4</line-spacing>
                <color>
                    <red type="float">0.7</red>
                    <green type="float">0.7</green>
                    <blue type="float">0.7</blue>
                    <alpha type="float">1</alpha>
                </color>
            </font>
            <lightning type="bool" archive="y">true</lightning>
            <display-mode type="string" archive="y">plan</display-mode>
            <radar-texture-path type="string" archive="y">Aircraft/Instruments-3d/primus-1000/MFD/od_wxradar.png</radar-texture-path>
            <echo-texture-path type="string" archive="y">Aircraft/Instruments-3d/primus-1000/MFD/wxecho.png</echo-texture-path>
            <minimized type="bool" archive="y">false</minimized>
            <heading-marker type="bool" archive="y">true</heading-marker>
            <limit-deg type="int">360</limit-deg>
        </radar>

        <annunciators>
            <master-warning type="bool">0</master-warning>
            <master-caution type="bool">0</master-caution>
            <LHign type="bool">0</LHign>
            <RHign type="bool">0</RHign>
            <batt type="bool">0</batt>
            <batt160 type="bool">0</batt160>
            <cab-alt type="bool">0</cab-alt>
            <ac-fail type="bool">0</ac-fail>
            <oil-psi type="bool">0</oil-psi>
            <fire-det type="bool">0</fire-det>
            <oil-fltr-bp type="bool">0</oil-fltr-bp>
            <fuel-gauge type="bool">0</fuel-gauge>
            <fuel-boost type="bool">0</fuel-boost>
            <fuel-lo type="bool">0</fuel-lo>
            <fuel-psi type="bool">0</fuel-psi>
            <fuel-fltr-bp type="bool">0</fuel-fltr-bp>
            <gen-off type="bool">0</gen-off>
            <invtr-fail type="bool">0</invtr-fail>
            <lo-brk-psi type="bool">0</lo-brk-psi>
            <antiskid type="bool">0</antiskid>
            <emer-psi type="bool">0</emer-psi>
            <spd-brk type="bool">0</spd-brk>
            <hyd-flow type="bool">0</hyd-flow>
            <lo-hyd-lvl type="bool">0</lo-hyd-lvl>
            <hyd-psi type="bool">0</hyd-psi>
            <eng-vib type="bool">0</eng-vib>
            <door-seal type="bool">0</door-seal>
            <bld-air-gnd type="bool">0</bld-air-gnd>
            <bagg-door type="bool">0</bagg-door>
            <cabin-door type="bool">0</cabin-door>
            <aft-bagg-door type="bool">0</aft-bagg-door>
            <ap-pitch-trim type="bool">0</ap-pitch-trim>
            <ap-roll-trim type="bool">0</ap-roll-trim>
            <chk-pfd-1 type="bool">0</chk-pfd-1>
            <chk-pfd-2 type="bool">0</chk-pfd-2>
            <nose-av-fan type="bool">0</nose-av-fan>
            <grnd-idle type="bool">0</grnd-idle>
            <tas-htr type="bool">0</tas-htr>
            <fw-shutoff type="bool">0</fw-shutoff>
            <stby-ps-htr type="bool">0</stby-ps-htr>
            <aoa-htr type="bool">0</aoa-htr>
            <ps-htr type="bool">0</ps-htr>
            <eng-antice type="bool">0</eng-antice>
            <ws-oheat type="bool">0</ws-oheat>
            <surf-deice type="bool">0</surf-deice>
            <air-dct-oheat type="bool">0</air-dct-oheat>
            <acm-psi type="bool">0</acm-psi>
            <gear-unlocked type="bool">0</gear-unlocked>
            <gear-N type="bool">0</gear-N>
            <gear-L type="bool">0</gear-L>
            <gear-R type="bool">0</gear-R>
        </annunciators>
        <alerts>
            <gear-horn type="bool">0</gear-horn>
        </alerts>
	<rmu>
	<unit n="0">
		<serviceable type="bool">1</serviceable>
		<selected type="int">0</selected>
		<selected-xoffset type="int">0</selected-xoffset>
		<selected-yoffset type="int">0</selected-yoffset>
		<com-num type="int">0</com-num>
		<nav-num type="int">0</nav-num>
		<adf-num type="int">0</adf-num>
	</unit>
	<unit n="1">
		<serviceable type="bool">1</serviceable>
		<selected type="int">0</selected>
		<selected-xoffset type="int">0</selected-xoffset>
		<selected-yoffset type="int">0</selected-yoffset>
		<com-num type="int">1</com-num>
		<nav-num type="int">1</nav-num>
		<adf-num type="int">1</adf-num>
	</unit>
	</rmu>
    </instrumentation>

    <controls>
        <gear>
            <brake-parking>1</brake-parking>
        </gear>
        <engines>
            <engine n="0">
            <magnetos>3</magnetos>
            </engine>
            <engine n="1">
            <magnetos>3</magnetos>
            </engine>
        </engines>
        <flight>
            <speedbrake type="double">0</speedbrake>
        </flight>
    </controls>

    <nasal>
        <citation>
            <file>Aircraft/CitationX/Nasal/CitationX.nas</file>
            <file>Aircraft/CitationX/Nasal/Electrical.nas</file>
            <file>Aircraft/CitationX/Nasal/flightdirector.nas</file>
        </citation>
            <efis>
                <file>Aircraft/Instruments-3d/primus-1000/P1000.nas</file>
            </efis>
    </nasal>

    <input>
        <keyboard>
            <key n="127">
                <name>Delete</name>
                <desc>Toggle Reversers</desc>
                <binding>
                    <command>property-toggle</command>
                    <property>controls/engines/engine[0]/reverser</property>
                </binding>
                <binding>
                    <command>property-toggle</command>
                    <property>controls/engines/engine[1]/reverser</property>
                </binding>
            </key>
            <key n="4">
                <name>Ctrl-D</name>
                <desc>Open/close door</desc>
                <binding>
                    <command>nasal</command>
                    <script>citation.cabin_door.toggle();</script>
                </binding>
            </key>
            <key n="267">
                <name>F11</name>
                <desc>Pop up autopilot dialog</desc>
                <binding>
                    <command>nasal</command>
                    <script>citation.ap_settings.toggle()</script>
                </binding>
            </key>
        </keyboard>
    </input>

</PropertyList>
